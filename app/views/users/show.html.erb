
<div class="row">
  <div class="card col-11" style="80%;">
    <div style="padding: 15px">
      <%= image_tag @user.avatar, class: "rounded-circle "%>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @user.firstname %> <%= @user.lastname %></h5>
        <p class="card-text">
          <% if @user.biography %>
            <%= @user.biography %>
          <% end %>
        </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <span class="badge badge-info">company</span>
        <% if @user.company_name %>
           <%= @user.company_name %>
        <% end %>
      </li>
      <li class="list-group-item">
        <span class="badge badge-info">job title</span>
        <% if @user.job_title %>
           <%= @user.job_title %>
        <% end %>
      </li>
      <li class="list-group-item">
        <span class="badge badge-info">email</span>
          <% if @user.email %>
            <%= @user.email %>
          <% end %>
      </li>
    </ul>
    <div class="card-body">
      <% if params[:id] == session[:user_id] %>
        <%= link_to "Edit details", edit_profile_path(id: @user.id), class: "btn btn-outline-success" %>
      <% end %>

      <% if current_user.id != @user.id %>
        <%= link_to "Send message", message_associate_path(@user.id), class: "btn btn-outline-info"%>
        <% if @association.event != nil && @association.event != '' %>
          <h3>You met at</h3>
          <h5><%= @association.event %></h5>
        <% end %>
        <% if @lat != '' && @lat != nil %>
          <h3>You met here:</h3>
          <iframe src="https://maps.google.com/maps?q=<%= @lat %>, <%= @long %>&z=15&output=embed" width="100%" height="270" frameborder="0" style="border:0"></iframe>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
