
<div class="row">
  <div class="card" style="width: 18rem;">
    <div style="padding: 15px">
      <%= image_tag @user.avatar, size:"200x200", class: "mr-2 rounded-circle "%>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @user.firstname %> <%= @user.lastname %></h5>
        <p class="card-text">
          <% if @user.biography %>
            <%= @user.biography %>
          <% end %>
        </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <span class="badge badge-info">company</span>
        <% if @user.company_name %>
           <%= @user.company_name %>
        <% end %>
      </li>
      <li class="list-group-item">
        <span class="badge badge-info">job title</span>
        <% if @user.job_title %>
           <%= @user.job_title %>
        <% end %>
      </li>
      <li class="list-group-item">
        <span class="badge badge-info">email</span>
          <% if @user.email %>
            <%= @user.email %>
          <% end %>
      </li>
    </ul>
    <div class="card-body">
       <% if params[:id] == session[:user_id] %>
        <%= link_to "Edit details", edit_profile_path(id: @user.id), class: "btn btn-outline-success" %>
       <% end %>
    </div>
  </div>
</div>
