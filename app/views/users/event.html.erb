<div class="row">
  <div class="col align-items-center justify-content-center">
  <h1 class="pb-2 row">Event</h1>
  <% if @user.google_token == nil %>
    <%= link_to "Connect to Google Calendar", google_login_path , class: "btn btn-primary" %>
  <% end %>

  <%= form_with url: update_event_path do |f| %>
    <div class="form-group row">
      <% if @user.google_token != nil %>
        <%= f.select 'event', options_for_select(@events), class: "form-control row", prompt: "Select event you are at" %>
      <% end %>
    </div>
    <div class="form-group align-items-center row">
      <%= f.text_field :other_event, class: "form-control col-md-3 col-sm-6", id: "other_event" %>
    </div>
    </br>
    <div class="row">
      <%= f.submit "Submit", class: "btn btn-primary"  %>
    </div>
    </br>
  <% end %>
</div>
</div>


<script>
$(document).ready(function(){
   $('#other_event').hide();
  $('#event').change(function() {
    if(this.value == "Other") {
      $('#other_event').show();
    }else{
      console.log('here');
      $('#other_event').hide();
    }
  });
});
</script>
