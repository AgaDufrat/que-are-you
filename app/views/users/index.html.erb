<div id="profile_image">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, size:"300x300", class: "mr-2 rounded-circle" %>
  <% end %>
</div>

<div style="padding: 20px">
<h1 class="pb-2">Scan me</h1>
<table>
 <% @qr.modules.each_index do |x| -%>
   <tr>
   <% @qr.modules.each_index do |y| -%>
    <% if @qr.dark?(x,y) -%>
    <td class="black"/>
    <% else -%>
    <td class="white"/>
    <% end %>
   <% end %>
   </tr>
 <% end %>
</table>
<br>
</br>
<%= link_to 'Scan QR code', '/associations/new', class: "btn btn-success" %>
