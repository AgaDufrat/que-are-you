<h1>Log In</h1>
<%= form_for :login do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true, class: "form-control col-6"  %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control col-6" %>
  </div>
  <div>
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
