<!DOCTYPE html>
<html>
  <head>
    <title>Que Are You?</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <% if current_user %>
      <!-- logged in -->
      <%= "Hi, #{current_user.firstname}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log out', logout_path, method: :delete %>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Home', root_path %> | <%= link_to 'Log in', login_path %> or <%= link_to 'Create account', new_user_path %>
    <% end %>
    <hr>

    <% if notice %>
      <%= notice %>
    <% end %>
    <% if alert %>
      <%= alert %>
    <% end %>

    <%= yield %>
  </body>
</html>
